{% extends 'AcmeTomatomanBundle::layout.html.twig' %}

{% block content %}
    <h1>Project list</h1>
    
    {% if entities %}
        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.description }}</td>
                    <td>
                        {% if entity.active %} 
                            {% image '@AcmeTomatomanBundle/Resources/public/icons/true.png' %}
                                <img src="{{asset_url}}" />
                            {% endimage %}
                        {% else %}
                            {% image '@AcmeTomatomanBundle/Resources/public/icons/false.png' %}
                                <img src="{{asset_url}}" />
                            {% endimage %}
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('admin_project_show', { 'id': entity.id }) }}">
                            {% image '@AcmeTomatomanBundle/Resources/public/icons/show.png' %}
                                <img src="{{asset_url}}" />
                            {% endimage %}
                        </a>
                        <a href="{{ path('admin_project_edit', { 'id': entity.id }) }}">
                            {% image '@AcmeTomatomanBundle/Resources/public/icons/edit.png' %}
                                <img src="{{asset_url}}" />
                            {% endimage %}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    
    <ul>
        <li>
            <a href="{{ path('admin_project_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
