{% extends 'AcmeTomatomanBundle::layout.html.twig' %}
{% form_theme edit_form 'AcmeTomatomanBundle:Form:form_div_layout.html.twig' %}

{% block content %}
    <h1>Project edit</h1>
    
    <form class="project_edit" action="{{ path('admin_project_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>
    
    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_project') }}">
                Back to the list
            </a>
        </li>
        <li>
            <form action="{{ path('admin_project_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}
